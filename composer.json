{
    "name": "denshoch/dendenmarkdown",
    "description": "Just a little help for them. This is a Markdown dialect optimized for EPUB 3.",
    "type": "library",
    "keywords": [
        "Markdown",
        "EPUB"
    ],
    "homepage": "https://denshochan.com/markdown",
    "version": "1.3.9",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Densho Channel",
            "homepage": "https://denshochan.com/",
            "role": "Developer"
        }
    ],
    "require": {
        "michelf/php-markdown": "1.8.0",
        "myclabs/php-enum": "^1.5",
        "denshoch/utils": "dev-master",
        "denshoch/harusame": ">=2.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5.13",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-0": {
            "Denshoch\\": "src/"
        }
    },
    "scripts": {
        "test": [
            "phpunit tests"
        ],
        "phpcs": [
            "phpcs --standard=ruleset.xml src/Denshoch/ | more"
        ],
        "phpcbf": [
            "phpcbf --standard=ruleset.xml src/Denshoch/"
        ]
    }
}
